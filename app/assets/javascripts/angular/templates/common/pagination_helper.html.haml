.page-selector
  .page-selector-input
    Page:
    %input{"type"=>"number",
           "min"=>"1",
           "max"=>"{{paginationHelperCtrl.options.maxPages}}",
           "ng-model"=>"paginationHelperCtrl.options.currentPage",
           "ng-model-options"=>"{ updateOn: 'change blur' }"}

  -# "<<"
  %button.page-selector-button{"type"=>"button",
                               "ng-disabled"=>"paginationHelperCtrl.options.currentPage === 1",
                               "ng-class"=>"{ 'disabled': paginationHelperCtrl.options.currentPage === 1 }",
                               "ng-click"=>"paginationHelperCtrl.changePage(1)"} <<

  -# "<"
  %button.page-selector-button{"type"=>"button",
                               "ng-disabled"=>"paginationHelperCtrl.options.currentPage === 1",
                               "ng-class"=>"{ 'disabled': paginationHelperCtrl.options.currentPage === 1 }",
                               "ng-click"=>"paginationHelperCtrl.setPageOffset(1, false)"} <

  %button.page-selector-button{"ng-if"=>"paginationHelperCtrl.options.maxPages && paginationHelperCtrl.options.maxPages <= 5",
                               "ng-repeat"=>"page in paginationHelperCtrl.pageRange() track by $index",
                               "ng-click"=>"paginationHelperCtrl.changePage(page)",
                               "ng-class"=>"{ 'selected': paginationHelperCtrl.selected(page) }"} {{ page }}

  -# truncated page links, if greater than 5 pages
  %button.page-selector-button{"ng-if"=>"paginationHelperCtrl.options.maxPages && paginationHelperCtrl.options.maxPages > 5",
                               "ng-repeat"=>"page in paginationHelperCtrl.pageRange(true) track by $index",
                               "ng-click"=>"paginationHelperCtrl.changePage(page)",
                               "ng-class"=>"{ 'selected': paginationHelperCtrl.selected(page) }"} {{ page }}

  -# ">"
  %button.page-selector-button{"type"=>"button",
                               "ng-disabled"=>"paginationHelperCtrl.atMaxPage()",
                               "ng-class"=>"{ 'disabled': paginationHelperCtrl.atMaxPage() }",
                               "ng-click"=>"paginationHelperCtrl.setPageOffset(1)"} >

  -# ">>"
  %button.page-selector-button{"type"=>"button",
                               "ng-disabled"=>"paginationHelperCtrl.atMaxPage()",
                               "ng-class"=>"{ 'disabled': paginationHelperCtrl.atMaxPage() }",
                               "ng-click"=>"paginationHelperCtrl.changePage(paginationHelperCtrl.options.maxPages)"} >>

  .page-size-buttons
    %button.page-selector-button.page-size{"type"=>"button",
                                           "ng-click"=>"paginationHelperCtrl.changePageSize(25)",
                                           "ng-class"=>"{ 'selected': paginationHelperCtrl.options.pageSize === 25 }"} 25
    %button.page-selector-button.page-size{"type"=>"button",
                                           "ng-click"=>"paginationHelperCtrl.changePageSize(50)",
                                           "ng-class"=>"{ 'selected': paginationHelperCtrl.options.pageSize === 50 }"} 50
    %button.page-selector-button.page-size{"type"=>"button",
                                           "ng-click"=>"paginationHelperCtrl.changePageSize(75)",
                                           "ng-class"=>"{ 'selected': paginationHelperCtrl.options.pageSize === 75 }"} 75
