%section.form-section

  .form-subsection
    %h3.form-subtitle
      Requirements
      %span.has-tooltip
        %i.fa.fa-info-circle
        .display-on-hover.hover-style
          Unlocks allow you to direct the sequence of content in your course. What do students need to do in order to unlock this {{termFor('badge')}}?
    %unlock-conditions(condition-id="badge.id" condition-type="Badge")

  .form-subsection(ng-if="hasUnlocks()")
    %h3.form-subtitle
      Visibility Settings
    .form-item
      %label
        %input(type="checkbox" ng-model="badge.auto_award_after_unlock" ng-click="updateBadge()")
          {{termFor('badge')}} Automatically Awarded After Unlock
    .form-item
      %label
        %input(type="checkbox" ng-model="badge.visible_when_locked" ng-click="updateBadge()")
          {{termFor('badge')}} Visible When Locked

      %ul.conditional-options(ng-if="badge.visible_when_locked")
        %li
          %label
            %input(type="checkbox" ng-model="badge.show_name_when_locked" ng-click="updateBadge()") Show Name when Locked
        %li
          %label
            %input(type="checkbox" ng-model="badge.show_points_when_locked" ng-click="updateBadge()") Show Points when Locked
        %li
          %label
            %input(type="checkbox" ng-model="badge.show_description_when_locked" ng-click="updateBadge()") Show Description when Locked
